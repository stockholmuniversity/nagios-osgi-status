<?xml version="1.0" encoding="UTF-8"?>
<blueprint
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
    http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
  ">

  <server xmlns="http://cxf.apache.org/blueprint/jaxrs" id="customerService">

    <serviceBeans>
      <ref component-id="status" />
    </serviceBeans>

  </server>

  <bean id="status" class="se.su.it.servicemix.camel.osgi.status.Status" />

  <bean id="StatusRoutes" class="se.su.it.servicemix.camel.osgi.status.StatusRoutes" />

  <camelContext xmlns="http://camel.apache.org/schema/spring" id="defaultCamelContext">
    <routeBuilder ref="StatusRoutes"/>
  </camelContext>

</blueprint>
